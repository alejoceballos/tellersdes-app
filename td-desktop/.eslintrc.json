{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 7,
    "sourceType": "module",
    "allowImportExportEverywhere": false,
    "codeFrame": true
  },
  "parser": "babel-eslint",
  "plugins": [
    "import"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:import/recommended"
  ],
  "rules": {
    // Possible Errors

    "no-await-in-loop": "warn",
    "no-extra-parens": "warn",
    "no-prototype-builtins": "warn",
    "no-template-curly-in-string": "warn",
    // "require-atomic-updates": "warn",

    // Best Practices

    "accessor-pairs": "warn",
    "array-callback-return": "error",
    "block-scoped-var": "error",
    "class-methods-use-this": [
      "warn",
      {
        "exceptMethods": [
          "render"
        ]
      }
    ],
    "complexity": "warn",
    "default-case": "warn",
    "no-alert": "warn",
    "no-console": "off",
    "no-empty-function": "warn",
    "no-eq-null": "warn",
    "no-eval": "warn",
    "no-extra-bind": "warn",
    "no-floating-decimal": "warn",
    "no-implicit-coercion": "warn",
    "no-implicit-globals": "warn",
    "no-implied-eval": "warn",
    "no-invalid-this": "warn",
    "no-iterator": "warn",
    "no-labels": "warn",
    "no-lone-blocks": "warn",
    "no-loop-func": "warn",
    "no-magic-numbers": "warn",
    "no-multi-spaces": "warn",
    "no-multi-str": "warn",
    "no-new": "warn",
    "no-new-func": "warn",
    "no-new-wrappers": "warn",
    "no-restricted-properties": "warn",
    "no-return-assign": "warn",
    "no-return-await": "warn",
    "no-script-url": "warn",
    "no-self-compare": "warn",
    "no-sequences": "warn",
    "no-throw-literal": "warn",
    "no-unmodified-loop-condition": "warn",
    "no-unused-expressions": "warn",
    "no-useless-call": "warn",
    // "no-useless-catch": "warn",
    "no-useless-concat": "warn",
    "no-void": "warn",
    "no-warning-comments": "warn",
    "no-with": "warn",
    // "prefer-named-capture-group": "warn",
    "prefer-promise-reject-errors": "warn",
    "radix": "warn",
    "require-await": "warn",
    // "require-unicode-regexp": "warn",
    "vars-on-top": "warn",
    "wrap-iife": [
      "error",
      "inside"
    ],
    "yoda": [
      "error",
      "never",
      {
        "onlyEquality": true
      }
    ],
    // Stric Mode

    "strict": "off",
    // Variable

    "init-declarations": [
      "error",
      "always"
    ],
    "no-label-var": "error",
    "no-shadow": "warn",
    "no-shadow-restricted-names": "warn",
    "no-undef-init": "warn",
    "no-undefined": "off",
    "no-use-before-define": "warn",
    // Stylistic Issues

    "array-bracket-newline": [
      "warn",
      "consistent"
    ],
    "array-element-newline": "warn",
    "block-spacing": "warn",
    // "eslint brace-style": ["error", "1tbs", { "allowSingleLine": true }]
    "camelcase": "warn",
    "capitalized-comments": "off",
    "comma-dangle": [
      "error",
      "always"
    ],
    "comma-spacing": [
      "warn",
      {
        "before": false,
        "after": true
      }
    ],
    "comma-style": [
      "warn",
      "last"
    ],
    "computed-property-spacing": [
      "warn",
      "never"
    ],
    // consistent-this
    "eol-last": "warn",
    // func-call-spacing
    // func-name-matching
    // func-names
    // func-style
    "function-paren-newline": [
      "error",
      {
        "minItems": 2
      }
    ],
    // id-blacklist
    // id-length
    // id-match
    "implicit-arrow-linebreak": [
      "error",
      "beside"
    ],
    "indent": [
      "error",
      2
    ],
    "jsx-quotes": "warn",
    // ...
    "semi": "warn"
  }
}
